!!! 5
%html
  %head
    %title Instagramm
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

    %nav.navbar.navbar-inverse
      .container
        .navbar-brand= link_to 'Instagramm', root_path
        - if user_signed_in?
          = link_to 'Gram It!', new_pic_path, class: 'navbar-text navbar-link'
          = link_to 'Settings', edit_user_registration_path, class: 'navbar-text navbar-link'
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Join!', new_user_registration_path
            %li= link_to 'Log In', new_user_session_path

    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, class: 'alert alert-info'

      = yield
